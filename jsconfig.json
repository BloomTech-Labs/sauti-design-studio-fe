{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src/",
    "paths": {
      "src/*": [
        "/*"
      ],
      "@/*": [
        "components/*"
      ],
      "theme": [
        "./src/theme.js"
      ],
      "helpers": [
        "./src/helpers.js"
      ],
      "actions": [
        "./src/actions/*"
      ],
      "reducers": [
        "./src/reducers/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "module": "commonjs"
}
